body
  font-size (fpc)px
  font-family FONT_FAMILY
  line-height 1.5
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust 100%
  color FONT_COLOR_DEFAULT
  a
    color FONT_COLOR_LINK
    text-decoration none
    &:hover
      text-decoration underline
    &:link
    &:active
    &:visited
    &:focus
      color FONT_COLOR_LINK

// fontsize
for i in (1..FONT_SIZE_SPLIT)
  diff = wmin + (((wsp - wmin) / FONT_SIZE_SPLIT)  * i);
  @media all and (min-width: (diff)px)
    body
      font-size ceil(((diff / wmin) * fmin))px
diff = ((wsp - wmin) / FONT_SIZE_SPLIT);
@media all and (max-width: (wmin + diff)px)
  body
    font-size (fmin)px
@media all and (min-width: (wsp + 1)px)
  body
    font-size (fpc)px

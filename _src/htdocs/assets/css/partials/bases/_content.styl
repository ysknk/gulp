body
  font-size (fpc)px
  font-family FONT_FAMILY
  line-height 1.5

  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust 100%

  -webkit-print-color-adjust exact

  font-feature-settings 'palt' 1
  // font-variant-ligatures no-common-ligatures
  // font-variant-numeric slashed-zero

  color FONT_COLOR_DEFAULT
  break_word()

a
  link_style('', '', '', '')

a,
button
  font-family FONT_FAMILY
  -webkit-appearance none
  -moz-appearance none
  &:focus
    outline none

input,
textarea,
button
  padding 0
  border none
  background none
  font-size inherit
  font-family FONT_FAMILY
  outline none
  padding 0
  appearance none
  line-height inherit
  &::-moz-focus-inner
    border none

input
  appearance none
  border-radius 0
  &:focus
    outline none

input[type="submit"],
button,
label
  cursor pointer

img
  vertical-align top
  max-width 100%

// fontsize
font_size_responsive(body)


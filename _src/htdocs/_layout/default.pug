doctype html
html(lang="ja")
  head
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    if title
      title!= title
    if description
      meta(name="description" content!=description)
    if keywords
      meta(name="keywords" content!=keywords)

    link(href=assets_path + '/js/style.css' rel="stylesheet")

    script(src=assets_path + '/js/index.js')

  body
    // #wrapper
    #wrapper
      != '\n'

      header
        block header
          p header
      != '\n'

      main(role="main")
        article
          block content
            p content
      != '\n'

      footer
        block footer
          p footer
      != '\n'

    // /#wrapper

nav
  h2.title: span COMPONENTS
  ul.aigis-moduleList
    each component in components
      li.aigis-moduleList__item
        a(href=`#${component.config.name}`) #{component.config.name}

each component in components
  hr.hr(style="margin-bottom: 0;")

  .aigis-module
    h2.aigis-module__heading(id=component.config.name) #{component.config.name}
    .aigis-module__filepath!= component.sourcePath.replace(/\\/g, '/').replace(/^\//, '')

    .tags
      each tag in component.config.tag
        .tag(class=`is-white aigis-tags__item--${tag}`) #{tag}

    != component.html.replace(/aigis-preview/g, 'aigis-preview module-base-layout')

